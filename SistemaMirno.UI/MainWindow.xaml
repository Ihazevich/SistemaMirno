<mah:MetroWindow x:Class="SistemaMirno.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaMirno.UI"
        xmlns:view="clr-namespace:SistemaMirno.UI.View"
        mc:Ignorable="d"
        Title="Sistema Mirno" 
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <view:ProductionAreasView DataContext="{Binding ProductionAreasViewModel}"/>
        <view:WorkUnitView Grid.Column="1" DataContext="{Binding WorkUnitViewModel}"/>        
    </Grid>
</mah:MetroWindow>
