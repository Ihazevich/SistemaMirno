<UserControl x:Class="SistemaMirno.UI.View.General.VehicleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SistemaMirno.UI.View.General"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="700" />
        </Grid.RowDefinitions>
        <TextBlock Text="Vehiculos"
                   Style="{StaticResource MaterialDesignHeadline2TextBlock}"
                   Margin="5" />
        <Separator Grid.Row="1" />
        <ProgressBar Grid.Row="2" IsEnabled="True" IsIndeterminate="True" Visibility="{Binding ProgressVisibility}"/>
        <Grid Grid.Row="3" Visibility="{Binding ViewVisibility}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <Button Content="AGREGAR NUEVO"
                        Command="{Binding CreateNewCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        FontSize="20"
                        Width="250"
                        Margin="10" />
                <Button Content="VER DETALLES"
                        Command="{Binding OpenDetailCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        FontSize="20"
                        Width="250" 
                        Margin="10" />
                <Button Content="SALIR" 
                        Command="{Binding ExitView}"
                        Style="{StaticResource MaterialDesignRaisedAccentButton}" 
                        FontSize="20"
                        Width="250" 
                        Margin="10" />
            </StackPanel>
            <DataGrid Grid.Column="1" 
                      ItemsSource="{Binding Vehicles}"
                      SelectedItem="{Binding SelectedVehicle}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="True"
                      CanUserDeleteRows="True"
                      SelectionMode="Extended"
                      EnableRowVirtualization="True"
                      VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                      BorderBrush="LightGray"
                      BorderThickness="1"
                      Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Modelo" Binding="{Binding VehicleModel}"/>
                    <DataGridTextColumn Header="Año" Binding="{Binding Year}"/>
                    <DataGridTextColumn Header="Patente" Binding="{Binding Patent}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
